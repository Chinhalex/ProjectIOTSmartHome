                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Study Room"
                    android:textColor="@color/primaryColor"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
